	int i = 1;
}

<h1>Movies</h1>
	<table id="movie-table" class="display">
		<thead>
		<tr>
			<th>Movies</th>
			<th>Genre</th>
		</tr>
		</thead>
		<tbody>
		</tbody>
	</table>

@section scripts {
	<script>
		$(document).ready(function ()
		{
			var table = $("#movie-table").DataTable(
				{
					ajax: {
						url: "/api/movies",
						dataSrc: ""
					},
					columns:
						[
							{
								data: "name"
							},
							{
								data: "genre.name"
							}
						]
				});
		});
	</script>
}

